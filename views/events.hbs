<!DOCTYPE html>
<div class="nav navUser">
    <h3 id="logo"><a href="/" class="logoLink">HuddleUp</a></h3>
    <div class="welcome">
        <p>Welcome, {{session.user}}!</p>
        {{#if session.user}}
            <a href="/logout" id="logout">Logout</a>
        {{/if}}
    </div>
</div>

<div class="background">

</div>
<div class="teamNav">
    <ul>
        <li><a href="/team/{{id}}">Team Home</a></li>
        <li><a href="/roster/{{id}}">Roster</a></li>
        <li class="selected"><a class="selected" href="/events/{{id}}">Events</a></li>
        <li><a href="/messages/{{id}}">Messages</a></li>
        <li><a href="/photos/{{id}}">Photos</a></li>
        {{#if coach}}
        <li><a href="javascript:void(0)" data-team-id="{{id}}" id="sendGroupTextMessage">Send Group Text</a></li>
        {{/if}}
    </ul>
</div>

<div class="myHomeLink">
    <img src="/trophy.png" alt="Trophy Image" class="trophyHome">
    <a href="/userHome">My Homepage</a>
</div>

<div class="dashboard">
    <h3 class="myTeams">{{teamName}} Upcoming Events:</h3>
    <div class="teamInfo eventInfo">
        {{#each events}}
        <div class="eachEvent">
            <img src="/calendar.png" alt="">
            <p class="titleEvent">{{title}}</p>
            <p><span class="bold">When: </span>{{date}}</p>
            <p><span class="bold">Where: </span>{{location}}</p>
            <p><span class="bold">Start Time: </span>{{starttime}}</p>
            <p><span class="bold">End Time: </span>{{endtime}}</p>
            <p><span class="bold">Coach Notes: </span>{{comment}}</p>
        </div>
        <br>
        {{/each}}
    </div>

{{#if coach}}
    <button type="button" name="button" id="createEventButton" class="submitButton">Add New Event</button>
{{/if}}
</div>
